<%- include("includes/head.ejs")%>
<body>
    <h2 style="text-align: center; margin:10px;">User Posts</h2>
    <a href="/posts/new" id="create-post">Create New Post</a>
    <div id="container">
      <%for(post of posts){ %>
        <div id="post" >
            <img id="postimg" src="<%=post.image%>" alt="img">
            <div id="post-content">
              <h3>username :@<%=post.username%></h3>
              <p><%=post.content%></p>
            </div>
            <a href="/posts/<%=post.id%>">Show in detail</a>
            <a href="/posts/edit/<%=post.id%>">Edit Post</a>
        </div>
      <%}%>
    </div>
</body>
</html>